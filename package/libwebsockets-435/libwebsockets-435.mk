LIBWEBSOCKETS_435_VERSION = 4.3.6
LIBWEBSOCKETS_435_SITE = $(call github,warmcat,libwebsockets,v$(LIBWEBSOCKETS_435_VERSION))
LIBWEBSOCKETS_435_LICENSE = MIT with exceptions
LIBWEBSOCKETS_435_LICENSE_FILES = LICENSE
LIBWEBSOCKETS_435_DEPENDENCIES = zlib
LIBWEBSOCKETS_435_INSTALL_STAGING = YES
LIBWEBSOCKETS_435_CONF_OPTS = \
	-DDISABLE_WERROR=ON \
	-DLWS_WITHOUT_TESTAPPS=ON \
	-DLWS_IPV6=ON \
	-DLWS_UNIX_SOCK=ON \
	-DLWS_WITHOUT_EXTENSIONS=OFF

# If LWS_MAX_SMP=1, then there is no code related to pthreads compiled
# in the library. If unset, LWS_MAX_SMP defaults to 32 and a small
# amount of pthread mutex code is built into the library.
ifeq ($(BR2_TOOLCHAIN_HAS_THREADS),)
LIBWEBSOCKETS_435_CONF_OPTS += \
	-DLWS_MAX_SMP=1 \
	-DLWS_WITH_SYS_SMD=OFF
else
LIBWEBSOCKETS_435_CONF_OPTS += \
	-DLWS_MAX_SMP= \
	-DLWS_WITH_SYS_SMD=ON
endif

ifeq ($(BR2_PACKAGE_OPENSSL),y)
LIBWEBSOCKETS_435_DEPENDENCIES += openssl host-openssl
LIBWEBSOCKETS_435_CONF_OPTS += \
	-DLWS_WITH_SSL=ON \
	-DLWS_WITH_MBEDTLS=OFF \
	-DLWS_WITH_WOLFSSL=OFF
else ifeq ($(BR2_PACKAGE_MBEDTLS),y)
LIBWEBSOCKETS_435_DEPENDENCIES += mbedtls
LIBWEBSOCKETS_435_CONF_OPTS += \
	-DLWS_WITH_SSL=ON \
	-DLWS_WITH_MBEDTLS=ON \
	-DLWS_WITH_WOLFSSL=OFF
else ifeq ($(BR2_PACKAGE_WOLFSSL_ALL),y)
LIBWEBSOCKETS_435_DEPENDENCIES += host-pkgconf wolfssl
LIBWEBSOCKETS_435_CONF_OPTS += \
	-DLWS_WITH_SSL=ON \
	-DLWS_WITH_MBEDTLS=OFF \
	-DLWS_WITH_WOLFSSL=ON
else
LIBWEBSOCKETS_435_CONF_OPTS += \
	-DLWS_WITH_SSL=OFF \
	-DLWS_WITH_MBEDTLS=OFF \
	-DLWS_WITH_WOLFSSL=OFF
endif

ifeq ($(BR2_PACKAGE_LIBEV),y)
LIBWEBSOCKETS_435_DEPENDENCIES += libev
LIBWEBSOCKETS_435_CONF_OPTS += -DLWS_WITH_LIBEV=ON
else
LIBWEBSOCKETS_435_CONF_OPTS += -DLWS_WITH_LIBEV=OFF
endif

ifeq ($(BR2_PACKAGE_LIBEVENT),y)
LIBWEBSOCKETS_435_DEPENDENCIES += libevent
LIBWEBSOCKETS_435_CONF_OPTS += -DLWS_WITH_LIBEVENT=ON
else
LIBWEBSOCKETS_435_CONF_OPTS += -DLWS_WITH_LIBEVENT=OFF
endif

ifeq ($(BR2_PACKAGE_LIBGLIB2),y)
LIBWEBSOCKETS_435_DEPENDENCIES += libglib2
LIBWEBSOCKETS_435_CONF_OPTS += -DLWS_WITH_GLIB=ON
else
LIBWEBSOCKETS_435_CONF_OPTS += -DLWS_WITH_GLIB=OFF
endif

ifeq ($(BR2_PACKAGE_UTIL_LINUX_LIBMOUNT),y)
LIBWEBSOCKETS_435_DEPENDENCIES += util-linux
LIBWEBSOCKETS_435_CONF_OPTS += -DLWS_WITH_FSMOUNT=ON
else
LIBWEBSOCKETS_435_CONF_OPTS += -DLWS_WITH_FSMOUNT=OFF
endif

ifeq ($(BR2_PACKAGE_LIBUV),y)
LIBWEBSOCKETS_435_DEPENDENCIES += libuv
LIBWEBSOCKETS_435_CONF_OPTS += -DLWS_WITH_LIBUV=ON
else
LIBWEBSOCKETS_435_CONF_OPTS += -DLWS_WITH_LIBUV=OFF
endif

ifeq ($(BR2_SHARED_LIBS),y)
LIBWEBSOCKETS_435_CONF_OPTS += -DLWS_WITH_STATIC=OFF
endif

ifeq ($(BR2_PACKAGE_LIBWEBSOCKETS_435_EXT_POLL),y)
LIBWEBSOCKETS_435_CONF_OPTS += -DLWS_WITH_EXTERNAL_POLL=ON
endif

ifeq ($(BR2_PACKAGE_LIBWEBSOCKETS_435_ASYNC_DNS),y)
LIBWEBSOCKETS_435_CONF_OPTS += -DLWS_WITH_SYS_ASYNC_DNS=ON
endif

$(eval $(cmake-package))
